{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2016",
    "esModuleInterop": true,
    "sourceMap": false,
    "rootDir": "src",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "jest.config.ts",
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts",
  ]
}